<%= form_with model: post, local: true do |f|%>
<%= render 'shared/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "練習メニュータイトル" %><br />
    <%= f.text_field :title, size: "60x10", id:"post_title" %>
  </div>

  <div class="field">
    <%= f.label :content, "練習メニュー内容" %><br />
    <%= f.text_area :content, size: "60x10", class: :form__text, id:"post_content" %>
  </div>

  <div class="field">
    <%= f.label :category, "カテゴリー" %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, { include_blank: false}, {class:"select-box", id:"post-category"}) %>
  </div>

  <div class="field">
    <%= f.label :genre, "ジャンル" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, { include_blank: false}, {class:"select-box", id:"post-genre"}) %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>